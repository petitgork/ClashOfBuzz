<div class="adversary-container">
  <% @match.teams.each do |team| %>
    <% if team.user != current_user %>
      <h2><%= team.user.nickname %> club</h2>
      <div class="team-list">
        <% team.politics.each do |politic| %>
        <ul>
          <li>
            <%= image_tag("avatars/#{politic.last_name.downcase.gsub("é", "e").gsub("è", "e").gsub("à", "a")}.png", class: "team-list-avatar") %>
            <%= politic.first_name %> <%= politic.last_name %>
          </li>
        </ul>
      <% end %>
      </div>
    <% end %>
  <% end %>
</div>
