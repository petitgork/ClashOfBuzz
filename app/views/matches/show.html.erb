<div>
  <h1>Match of the week</h1>

  <% @match.teams.each do |team| %>
    <h3><%= team.name %></h3>
    <% @match.line_ups.each do |line_up| %>
      <% if team.politics.include?(line_up.politic) %>
        <ul>
          <li><%= line_up.politic.first_name %> <%= line_up.politic.last_name %> <%= line_up.result %></li>
        </ul>
      <% end %>
    <% end %>
  <% end %>
</div>
<div>
<% @match.teams.each do |team| %>
    <h3><%= team.name %></h3>
    <% team.politics.each do |politic| %>
      <ul>
        <li><%= politic.first_name %> <%= politic.last_name %><%= button_to "Ajouter à l'équipe", match_line_ups_path(@match, politic_id:politic.id), method: :post%></li>
      </ul>
    <% end %>
  <% end %>
</div>
