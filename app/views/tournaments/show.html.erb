<div>
  <h3><%= @tournament.name %></h3>
  <p>Statut : "<%= @tournament.status %>"</p>

  <p>Liste des Ã©quipes inscrites :</p>
  <% @tournament.teams.each do |team| %>
    <p><%= team.name %> - <%= team.user.nickname %></p>
  <% end %>

  <% if @tournament.status == "created" %>
    <h4>Invite tes amis</h4>
    <p><%= url_for(only_path: false) %></p>
    <%= button_to 'Lancer le tournoi', launch_tournament_path(@tournament), method: :patch %>
    <% unless current_user.teams.exists?(tournament_id: @tournament.id) %>
      <%= button_to "Rejoindre le tournoi", join_tournament_path(@tournament), method: :post %>
    <% end %>
  <% end %>
</div>

<% if @tournament.status == "launched" %>
  <%= link_to "Voir ma team", tournament_team_path(@tournament, @team), class: "button" %>
  <%= link_to "Voir mes matchs", matches_path(tournament_id: @tournament), class: "button" %>
<% end %>
